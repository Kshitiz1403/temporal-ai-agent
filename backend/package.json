{
  "name": "temporal-ai-agent-nodejs",
  "version": "1.0.0",
  "description": "Node.js implementation of temporal-ai-agent - multi-turn conversation with an AI agent running inside a Temporal workflow",
  "main": "index.js",
  "scripts": {
    "test": "node test-setup.js",
    "start": "ts-node -r dotenv/config -r tsconfig-paths/register --transpile-only ./src/index.ts",
    "dev": "nodemon",
    "build": "tsc",
    "worker": "ts-node -r dotenv/config -r tsconfig-paths/register --transpile-only ./src/worker.ts",
    "worker:dev": "nodemon --config nodemon.worker.json",
    "migrate-up": "db-migrate up --env prod --config ./src/config/db-migrate.json --migrations-dir ./src/migrations --verbose",
    "migrate-down": "db-migrate down --env prod --config ./src/config/db-migrate.json --migrations-dir ./src/migrations --verbose",
    "migrate-create": "db-migrate create --env prod --config ./src/config/db-migrate.json --migrations-dir ./src/migrations",
    "convert-migration-file-to-module": "find ./src/migrations -type f -name \"*.js\" -exec bash -c 'mv \"$0\" \"${0%.js}.mjs\"' {} \\;"
  },
  "keywords": [
    "temporal",
    "ai",
    "agent",
    "workflow",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/google": "^1.2.18",
    "@ai-sdk/openai": "^0.0.24",
    "@temporalio/activity": "^1.10.1",
    "@temporalio/client": "^1.10.1",
    "@temporalio/worker": "^1.10.1",
    "@temporalio/workflow": "^1.10.1",
    "ai": "^3.1.12",
    "argon2": "^0.41.1",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "redis": "^4.7.0",
    "socket.io": "^4.7.5",
    "uuid": "^10.0.0",
    "winston": "^3.3.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
